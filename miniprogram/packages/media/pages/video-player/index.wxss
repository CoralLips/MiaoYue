/* pages/video-player/index.wxss */
.video-container {
  position: relative;
  width: 100%;
  height: 100vh;
  background: #000;
}

.video {
  width: 100%;
  height: 100%;
}

.controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--spacing-base);
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
}

.back-btn {
  position: absolute;
  top: var(--spacing-lg);
  left: var(--spacing-base);
  color: var(--color-bg-card);
  font-size: var(--font-size-lg);
  z-index: 100;
}

.title {
  font-size: var(--font-size-base);
  color: var(--color-bg-card);
  margin-bottom: var(--spacing-sm);
}

/* 视频播放器样式 */
.video-wrapper {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-player {
  width: 100%;
  height: 100%;
}

/* 加载中样式 */
.loading {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: var(--color-bg-card);
  font-size: var(--font-size-base);
} 