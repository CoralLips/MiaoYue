.profile-container {
  background: var(--color-bg-page);
  min-height: 100vh;
  padding: var(--spacing-sm);
}

/* 加载中样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading {
  color: var(--color-text-disabled);
  font-size: var(--font-size-base);
}

/* 用户信息卡片样式 */
.user-info-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-base);
  padding: var(--spacing-base);
  margin-bottom: var(--spacing-base);
  box-shadow: var(--shadow-base);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info-left {
  display: flex;
  align-items: center;
}

.user-avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-circle);
  overflow: hidden;
  margin-right: var(--spacing-small);
}

.user-avatar:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-circle);
  border: 4rpx solid var(--color-bg-card);
  box-shadow: var(--shadow-base);
}

.user-name {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name:active {
  opacity: 0.8;
}

.nickname {
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: var(--font-size-xs);
  color: var(--color-text-disabled);
  font-weight: normal;
}

.user-info-right {
  /* 预留右侧空间样式 */
}

/* 统计信息样式 */
.stats-container {
  display: flex;
  justify-content: space-around;
  padding: var(--spacing-base);
  background: var(--color-bg-card);
  border-radius: var(--radius-base);
  margin-bottom: var(--spacing-small);
  box-shadow: var(--shadow-base);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: var(--font-size-large);
  color: var(--color-text-primary);
  font-weight: bold;
}

.stat-label {
  font-size: var(--font-size-small);
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

/* 个人介绍卡片 */
.introduction-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-base);
  padding: var(--spacing-base);
  margin-bottom: var(--spacing-base);
  box-shadow: var(--shadow-base);
}

/* 联系方式卡片 */
.contact-section {
  background: var(--color-bg-card);
  border-radius: var(--radius-base);
  padding: var(--spacing-base);
  margin-bottom: var(--spacing-base);
  box-shadow: var(--shadow-base);
}

/* 相册卡片 */
.media-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-base);
  padding: var(--spacing-base);
  margin-bottom: var(--spacing-base);
  box-shadow: var(--shadow-base);
}

/* 分割线样式优化 */
.divider {
  height: 1rpx;
  background: var(--color-border);
  margin: var(--spacing-small) 0;
}

/* 卡片标题样式 */
.section-title {
  font-size: var(--font-size-medium);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-small);
  font-weight: 500;
}

/* 卡片内容样式 */
.section-content {
  color: var(--color-text-regular);
  font-size: var(--font-size-base);
  line-height: 1.6;
}

/* 卡片通用样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-small);
  padding-bottom: var(--spacing-small);
  border-bottom: 1rpx solid var(--color-border);
}

.card-title {
  font-size: var(--font-size-base);
  color: var(--color-text-primary);
  font-weight: 500;
}

.edit-btn, .upload-btn {
  font-size: var(--font-size-small);
  color: var(--brand-primary);
}

/* 介绍内容样式 */
.intro-content {
  padding: 10rpx 0;
  min-height: 80rpx;
}

.intro-content:active {
  background-color: #f9f9f9;
  border-radius: var(--radius-small);
}

.intro-text {
  font-size: var(--font-size-base);
  color: var(--color-text-regular);
  line-height: 1.6;
}

/* 介绍编辑样式 */
.intro-edit {
  padding: 10rpx 0;
}

.intro-textarea {
  width: 100%;
  height: 200rpx;
  background: var(--color-bg-page);
  border-radius: var(--radius-small);
  padding: var(--spacing-small);
  font-size: var(--font-size-base);
  color: var(--color-text-primary);
  box-sizing: border-box;
  margin-bottom: var(--spacing-small);
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
}

.cancel-btn, .save-btn {
  margin: 0;
  padding: 0;
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: var(--font-size-base);
  border-radius: 35rpx;
}

.cancel-btn {
  background: var(--color-bg-page);
  color: var(--color-text-regular);
  margin-right: var(--spacing-small);
}

.save-btn {
  background: var(--brand-primary);
  color: var(--color-bg-card);
}

/* 媒体内容样式 */
.media-content {
  padding: var(--spacing-small) 0;
}

.big-upload-item {
  width: 100%;
  height: 320rpx;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #ddd;
  border-radius: var(--radius-large);
  margin-bottom: var(--spacing-small);
  box-shadow: inset 0 0 10rpx rgba(0,0,0,0.03);
}

.big-upload-item:active {
  background-color: #f0f0f0;
}

.big-media-grid {
  display: flex;
  flex-direction: column;
}

.big-media-item {
  width: 100%;
  height: 360rpx;
  position: relative;
  border-radius: var(--radius-base);
  overflow: hidden;
  margin-bottom: var(--spacing-base);
  box-shadow: var(--shadow-card);
}

.plus-icon {
  font-size: 70rpx;
  color: #ccc;
  font-weight: 200;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: var(--font-size-base);
  color: #aaa;
  margin-top: 10rpx;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.media-type-icon {
  position: absolute;
  top: var(--spacing-small);
  right: var(--spacing-small);
  width: 60rpx;
  height: 60rpx;
  background: var(--color-bg-mask);
  border-radius: var(--radius-circle);
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-icon {
  color: var(--color-bg-card);
  font-size: var(--font-size-base);
}

.media-delete {
  position: absolute;
  top: var(--spacing-small);
  left: var(--spacing-small);
  width: 60rpx;
  height: 60rpx;
  background: var(--color-bg-mask);
  border-radius: var(--radius-circle);
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  color: var(--color-bg-card);
  font-size: var(--font-size-large);
}

