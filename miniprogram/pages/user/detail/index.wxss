/* pages/user/detail/index.wxss */
.page {
  width: 100vw;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 头部样式 */
.header {
  position: relative;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 内容样式 */
.content {
  padding: 30rpx;
}

/* 用户卡片样式 */
.user-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-name {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.user-location {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.location-icon {
  margin-right: 10rpx;
}

/* 区块样式 */
.section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #07C160;
  padding-left: 20rpx;
}

/* 标签样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background-color: #f0f9eb;
  color: #67c23a;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

/* 可信数据样式 */
.trust-data-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.trust-data-item {
  width: 48%;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.data-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.data-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 用户介绍样式 */
.user-intro {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 相册样式 */
.media-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.media-item {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.media-type-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-icon {
  color: #fff;
  font-size: 24rpx;
}

/* 联系按钮样式 */
.contact-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #07C160;
  color: #ffffff;
  text-align: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.3);
}

/* 加载中样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 30rpx;
  color: #999;
} 