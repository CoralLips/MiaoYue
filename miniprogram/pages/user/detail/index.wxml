<view class="page">
  <view class="header">
    <view class="back-btn" bindtap="goBack">
      <text class="back-icon">←</text>
      <text>返回</text>
    </view>
    <view class="title">用户详情</view>
  </view>
  
  <user-profile 
    wx:if="{{!loading}}"
    userInfo="{{userInfo}}" 
    editable="{{false}}"
    bind:previewMedia="previewMedia"
  />
  
  <!-- 加载中 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading">加载中...</view>
  </view>
</view> 