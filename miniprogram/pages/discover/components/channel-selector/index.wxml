      wx:for="{{filters}}" 
      wx:key="type"
      class="channel-item {{currentFilter === item.type ? 'active' : ''}}" 
      data-type="{{item.type}}" 
      bindtap="onFilterSelect"
    >
      <text class="channel-text">{{item.text}}</text>
