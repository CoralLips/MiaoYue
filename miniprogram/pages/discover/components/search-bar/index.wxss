.search-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  padding: 20rpx;
}

.search-bar.focused {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 100rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.search-icon image {
  width: 100%;
  height: 100%;
}

.clear-btn {
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s;
}

.clear-btn.show {
  opacity: 1;
  pointer-events: auto;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
} 