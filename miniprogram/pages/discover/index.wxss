/* pages/discover/index.wxss */
.page {
  width: 100%;
  height: 100vh;
  position: relative;
}

/* 搜索栏样式 */
.search-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.search-icon image {
  width: 100%;
  height: 100%;
}

.icon {
  font-size: 32rpx;
  color: #666;
}

.filter-tags {
  white-space: nowrap;
  padding: 10rpx 0;
}

.filter-tags .tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-tags .tag.active {
  background: #07C160;
  color: #fff;
}

/* 地图控制按钮 */
.map-controls {
  position: absolute;
  right: 30rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
}

.control-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 将过滤图标变为黑色 */
.channel-btn image {
  filter: brightness(0);
}

/* 用户弹窗样式 */
.user-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-popup-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  position: relative;
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

/* 用户基本信息样式 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-name {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

/* 标题样式 */
.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 用户标签样式 */
.user-tags {
  margin-bottom: 30rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
  font-size: 24rpx;
  color: #666;
}

/* 可信数据样式 */
.user-trust-data {
  margin-bottom: 30rpx;
}

.trust-data-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.trust-data-item {
  text-align: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.data-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.data-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 详情按钮样式 */
.detail-btn {
  background: #007AFF;
  color: #fff;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}

/* 频道切换按钮样式 */
.channel-btn {
  position: relative;
}

.channel-indicator {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ff0000;
  display: none;
}

.channel-indicator.active {
  display: block;
}

/* 频道选择弹窗样式 */
.channel-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: none;
}

.channel-popup.show {
  display: block;
}

.channel-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}

.channel-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.channel-item:last-child {
  border-bottom: none;
}

.channel-text {
  font-size: 32rpx;
  color: #333;
}

.channel-check {
  color: #007AFF;
  font-size: 32rpx;
}

/* 用户信息授权提示 */
.auth-tip {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  border-radius: 100rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  z-index: 99;
}

.auth-text {
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.auth-btn {
  background: #007AFF;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 100rpx;
  border: none;
  line-height: 1.5;
}

/* 地图标记样式 */
.map-marker-container {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.map-marker-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 自定义标记样式 */
.custom-marker {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.marker-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

/* 圆形头像样式 */
.circle-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}