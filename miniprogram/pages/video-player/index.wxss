/* pages/video-player/index.wxss */
.video-container {
  width: 100vw;
  height: 100vh;
  background-color: #000;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  position: relative;
  height: 100rpx;
  background-color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.back-btn {
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 视频播放器样式 */
.video-wrapper {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-player {
  width: 100%;
  height: 100%;
}

/* 加载中样式 */
.loading {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
} 