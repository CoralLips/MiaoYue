.content {
  padding: 30rpx;
}

/* 用户信息卡片样式 */
.user-info-card {
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.user-info-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info-left {
  display: flex;
  align-items: center;
}

.user-avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.user-avatar:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.user-name {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name:active {
  opacity: 0.8;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 卡片通用样式 */
.introduction-card, .media-card, .contact-card {
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.edit-btn {
  font-size: 26rpx;
  color: #07C160;
  padding: 10rpx;
}

.edit-btn:active {
  opacity: 0.8;
}

/* 介绍内容样式 */
.intro-content {
  padding: 20rpx;
  min-height: 120rpx;
  border-radius: 8rpx;
}

.intro-content.editing {
  background: #f9f9f9;
}

.intro-textarea {
  width: 100%;
  min-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.intro-hint {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #07C160;
  opacity: 0.8;
}

/* 联系方式样式 */
.contact-content {
  padding: 10rpx 0;
}

.contact-privacy-hint {
  font-size: 22rpx;
  color: #07C160;
  background: rgba(7, 193, 96, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-left: 12rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item:active {
  background-color: #f9f9f9;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
}

.contact-privacy-icon {
  font-size: 24rpx;
  color: #07C160;
}

.contact-privacy-tip {
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(7, 193, 96, 0.05);
  border-radius: 8rpx;
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  line-height: 1.6;
}

/* 媒体内容样式 */
.media-content {
  padding: 20rpx 0;
}

.big-upload-item {
  width: 100%;
  height: 320rpx;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: inset 0 0 10rpx rgba(0,0,0,0.03);
}

.big-upload-item:active {
  background-color: #f0f0f0;
}

.big-media-grid {
  display: flex;
  flex-direction: column;
}

.big-media-item {
  width: 100%;
  height: 360rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.plus-icon {
  font-size: 70rpx;
  color: #ccc;
  font-weight: 200;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #aaa;
  margin-top: 10rpx;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.media-type-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-icon {
  color: #fff;
  font-size: 30rpx;
}

.media-delete {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  color: #fff;
  font-size: 36rpx;
}