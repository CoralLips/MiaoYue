.user-marker {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
  pointer-events: auto;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  opacity: 0;
  transition: opacity 0.3s ease;
  background-color: #f5f5f5;
}

.avatar.loaded {
  opacity: 1;
}

.nickname {
  margin-top: 8rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  text-align: center;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  pointer-events: none;
} 